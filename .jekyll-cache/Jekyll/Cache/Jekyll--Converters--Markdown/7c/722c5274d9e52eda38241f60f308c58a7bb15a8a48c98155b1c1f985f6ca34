            let [res, content] = location.search.substr(location.search.indexOf("?") + 1).split('=');
            if(res == "error")
                alert("ë¡œê·¸ì¸ ì‹¤íŒ¨, ë‹¤ì‹œ ì‹œë„í•˜ì‹­ì‹œì˜¤.")
